{
  "variables": {
    "vmname":   "debian-jessie-qemu",
    "cpu":      2,
    "ram":      1024,
    "disksize": 10000,
    "hostname": "debian",
    "username": "vagrant",
    "password": "vagrant",
    "isofilename":     "debian-jessie-DI-rc2-amd64-netinst.iso",
    "isourl":          "http://cdimage.debian.org/cdimage/jessie_di_rc2/amd64/iso-cd/",
    "isochecksumtype": "md5",
    "isochecksum":     "82d3ff6d2422af72f5e1a82de88c21ea"
  },
  "builders":
  [
    {
      "type": "qemu",
      "accelerator": "kvm",
        "qemuargs": [
        [ "-m", "{{user `ram`}}m" ],
        [ "-smp", "{{user `cpu`}}" ]
      ], 
      "disk_size": "{{user `disksize`}}",
      "format": "qcow2",
      "vm_name": "{{user `vmname`}}",
      "iso_urls": [
        "{{user `isofilename`}}",
        "{{user `isourl`}}{{user `isofilename`}}"
      ], 
      "iso_checksum_type": "{{user `isochecksumtype`}}",
      "iso_checksum": "{{user `isochecksum`}}",
      "output_directory": "output/{{user `vmname`}}",
      "ssh_wait_timeout": "30s",
      "headless": false,
      "http_directory": "http",
      "http_port_min": 10082,
      "http_port_max": 10089,
      "ssh_host_port_min": 2222,
      "ssh_host_port_max": 2229,
      "shutdown_command": "echo 'halt -p' > shutdown.sh; echo 'vagrant'|sudo -S sh 'shutdown.sh'",
      "ssh_username": "{{user `username`}}",
      "ssh_password": "{{user `password`}}",
      "ssh_port": 22,
      "ssh_wait_timeout": "90m",
      "net_device": "virtio-net",
      "disk_interface": "virtio",
      "boot_wait": "5s",
      "boot_command": [
        "<esc><wait>",
        "install ",
        "preseed/url=http://{{ .HTTPIP }}:{{ .HTTPPort }}/debian-jessie-preseed.cfg ",
        "debian-installer=de_CH ",
        "auto ",
        "locale=de_CH ",
        "kbd-chooser/method=sg ",
        "netcfg/get_hostname={{user `hostname`}} ",
        "netcfg/get_domain=local ",
        "fb=false ",
        "debconf/frontend=noninteractive ",
        "console-setup/ask_detect=false ",
        "console-keymaps-at/keymap=sg <wait>",
        "<enter>",
        "<wait5><enter>"
      ]
    }
  ],
  "provisioners": [{
    "type": "shell",
    "execute_command": "echo 'vagrant' | {{.Vars}} sudo -S -E bash '{{.Path}}'",
    "scripts": [
      "scripts/postinstall.sh",
      "scripts/vagrant.sh"
    ]
  }],
  "post-processors": [{
    "type": "vagrant",
    "compression_level": 0,
    "output": "output/{{user `vmname`}}.box"
  }]
}

